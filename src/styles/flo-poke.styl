@keyframes finger1_wrap {
  0% {bottom: -500px}
  100% {bottom: 0px}
}

@keyframes finger1 {
  0% {top: 0px}
  50% {top:100px}
  100% {top: 0px}
}

@keyframes pokestop {
  0% {opacity: 100%}
  100% {opacity: 0%}
}

.poke {
  position: absolute;
  bottom: 0px;
  max-height: 60%;
  width: 100%;
  text-align: center;

  &.finger1_wrap {
    animation-name: finger1_wrap;
    animation-duration: 2s;
  }

  img {
    position:relative;
    height: 100%;

    &.finger1 {
      animation-name: finger1;
      animation-duration: 0.70s;
      animation-iteration-count: infinite;
    }
  }
}